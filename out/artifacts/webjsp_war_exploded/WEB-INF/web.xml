<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>USERS</param-name>
        <param-value>/home/zili/Documents/myjava/users</param-value>
    </context-param>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <default-content-type>text/html</default-content-type>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>loginjsp</servlet-name>
        <jsp-file>/ctrjsp/Login.jsp</jsp-file>
        <init-param>
            <param-name>SUCESS_VIEW</param-name>
            <param-value>member.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>ERROR_VIEW</param-name>
            <param-value>index.jsp</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginjsp</servlet-name>
        <url-pattern>/login.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registerjsp</servlet-name>
        <jsp-file>/ctrjsp/Register.jsp</jsp-file>
        <init-param>
            <param-name>SUCESS_VIEW</param-name>
            <param-value>sucess.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>ERROR_VIEW</param-name>
            <param-value>register.jsp</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registerjsp</servlet-name>
        <url-pattern>/cregister.jsp</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Messagejsp</servlet-name>
        <jsp-file>/ctrjsp/Message.jsp</jsp-file>
        <init-param>
            <param-name>MEMBER_VIEW</param-name>
            <param-value>member.jsp</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Messagejsp</servlet-name>
        <url-pattern>/cmessage.jsp</url-pattern>
    </servlet-mapping>

</web-app>